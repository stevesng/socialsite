<Module>
 <ModulePrefs title="All Groups" height="400"
   description="Shows all groups"
   show_in_directory="true"
   author="Project SocialSite"
   author_email="dev@socialsite.dev.java.net"
    thumbnail="../local_gadgets/thumbnails/groups.png">
   <Require feature="opensocial-0.8"/>
   <Require feature="socialsite-0.1"/>
   <Require feature="skins"/>
   <Require feature="minimessage"/>
 </ModulePrefs>
 <Content type="html">

 <![CDATA[
<link rel="stylesheet" text="text/css" href="../local_gadgets/files/socialsite-gadgets.css" />
<style type="text/css">

#widgetBody .text {
    padding: 13px 0 0 0;
    width: 65%;
}

#widgetBody .joinGroup {
        float: right;
        font-size: 1px;
        line-height: 1px;
        padding: .9em 6px 1px 1px;
}

#widgetBody .joinGroup img {
        display: inline;
        border: 0;
}

</style>

<script type="text/javascript" src="../local_gadgets/groups.js"></script>

 <!-- html markup -->
 <div id="socialsiteWidget">

   <!-- Widget Body -->
   <div id="widgetBody" class="clearfloat"></div>
 </div>

 ]]>
 </Content>
</Module>
